@model MinhaContaViewModel
@{
    ViewData["Title"] = "Minha conta";
}

<!-- TODO: continuar -->
<!-- Alteração de senha -->
@if (ViewData["SenhaAlterada"] != null)
{
    <div>
        <h3 class="sucesso">Senha alterada com sucesso!</h3>
    </div>
}

@Html.ValidationSummary(true)

<section>
    <h2>Alteração de senha</h2>

    <p>
        Dolores impedit sit et eius ipsa et magni. Dolor voluptatem qui dolores reiciendis.
        Ut dolor aut iure dolorum nisi quia modi occaecati.
    </p>

    <form id="form-alterarsenha" asp-action="AlterarSenha" asp-controller="Usuario" asp-antiforgery="true" method="post">
        <div class="campo-form">
            <label asp-for="AlterarSenha.SenhaAtual"></label>
            <input asp-for="AlterarSenha.SenhaAtual"/>
            <span asp-validation-for="AlterarSenha.SenhaAtual"></span>
        </div>

        <div class="campo-form">
            <label asp-for="AlterarSenha.SenhaNova"></label>
            <input asp-for="AlterarSenha.SenhaNova"/>
            <span asp-validation-for="AlterarSenha.SenhaNova"></span>
        </div>

        <div class="campo-form">
            <button type="submit" class="perigo"><i class="fa fa-key"></i> Alterar senha</button>
        </div>
    </form>
    <!--TODO: criar formulário para alteração de senha -->
</section>

